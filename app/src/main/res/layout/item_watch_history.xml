<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    app:cardElevation="@dimen/size_5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="@dimen/size_2dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/size_5dp"
    android:focusable="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_history_img"
            android:layout_centerVertical="true"
            android:padding="@dimen/size_5dp"
            android:layout_alignParentStart="true"
            android:layout_width="@dimen/size_180dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/iv_history_img"
            >

            <TextView
                android:id="@+id/tv_history_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:padding="@dimen/size_5dp"
                android:textSize="@dimen/size_14dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv_history_detail"
                android:padding="@dimen/size_5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12dp"
                />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>