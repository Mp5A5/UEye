<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:alpha="0.5"
        android:layout_height="@dimen/size_120dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="@dimen/size_100dp"
                android:layout_height="@dimen/size_100dp"
                android:layout_gravity="center"
                android:src="@mipmap/landing_countdown_background"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/size_70dp"
                android:layout_height="@dimen/size_70dp"
                android:src="@mipmap/ic_launcher"
                />
        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="点击登录即可发表评论"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40dp"
        android:layout_marginTop="@dimen/size_10dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_grey_heart"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="收藏"
                />
        </LinearLayout>

        <View
            android:layout_gravity="center_vertical"
            android:background="@color/gray_DCDCDC"
            android:layout_width="@dimen/size_1dp"
            android:layout_height="@dimen/size_30dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_reply_grey_without_padding"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_15dp"
                android:gravity="center"
                android:text="评论"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:background="@color/gray_DCDCDC"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1dp"
        />

    <TextView
        android:id="@+id/tv_save"
        android:layout_marginTop="@dimen/size_50dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:gravity="bottom|center_horizontal"
        android:text="我的缓存"
        android:textSize="@dimen/size_14dp"
        />

    <TextView
        android:id="@+id/tv_watch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:gravity="bottom|center_horizontal"
        android:text="观看记录"
        android:textSize="@dimen/size_14dp"
        />

    <TextView
        android:id="@+id/tv_advise"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:gravity="bottom|center_horizontal"
        android:text="意见反馈"
        android:textSize="@dimen/size_14dp"
        />

</LinearLayout>
