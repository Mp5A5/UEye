<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <com.shuyu.gsyvideoplayer.video.StandardGSYVideoPlayer
        android:id="@+id/mHomeDetailPlayerGsp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/black"
        android:paddingTop="@dimen/size_24dp"
        />

    <!--   <android.support.v4.widget.NestedScrollView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"
           android:fillViewport="true"
           >-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <ImageView
            android:id="@+id/mHomeDetailBottomBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:id="@+id/ll_bottom_set"
                    android:padding="@dimen/size_20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >

                    <TextView
                        android:id="@+id/mHomeDetailTitleTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标题"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:textSize="12sp"
                        android:id="@+id/mHomeDetailVideoTimeTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="时间"
                        android:textColor="@color/white"
                        />

                    <TextView
                        android:id="@+id/mHomeDetailVideoDescTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="13sp"
                        android:text="视频描述"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_below="@+id/ll_bottom_set"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/size_20dp"
                    >

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/mHomeDetailVideoFavorIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/ic_action_favorites_without_padding"
                            />

                        <TextView
                            android:id="@+id/mHomeDetailVideoFavorTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_5dp"
                            android:textColor="@color/white"
                            android:text="收藏"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/mHomeDetailVideoShareIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:src="@mipmap/ic_action_share_without_padding"
                            />

                        <TextView
                            android:id="@+id/mHomeDetailVideoShareTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_5dp"
                            android:textColor="@color/white"
                            android:text="分享"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        >

                        <ImageView
                            android:id="@+id/mHomeDetailVideoReplyIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10dp"
                            android:src="@mipmap/ic_action_reply_nopadding"
                            />

                        <TextView
                            android:id="@+id/mHomeDetailVideoReplyTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_5dp"
                            android:textColor="@color/white"
                            android:text="评论"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/mHomeDetailVideoDownloadLl"
                        android:layout_width="@dimen/size_0dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:gravity="center"

                        >

                        <ImageView
                            android:id="@+id/mHomeDetailVideoDownloadIv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10dp"
                            android:src="@mipmap/action_download_cut"
                            />

                        <TextView
                            android:id="@+id/mHomeDetailVideoDownloadTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_5dp"
                            android:textColor="@color/white"
                            android:text="缓存"
                            />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>


    </RelativeLayout>

</LinearLayout>