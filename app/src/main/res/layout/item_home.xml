<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_250dp"
    android:layout_margin="@dimen/size_2dp"
    android:background="?android:attr/selectableItemBackground"
    app:cardElevation="@dimen/size_5dp"
    app:cardCornerRadius="@dimen/size_5dp"
    android:focusable="true"
    android:id="@+id/cv_home_container"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/iv_home_Photo"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200dp"
            />

        <LinearLayout
            android:layout_below="@+id/iv_home_Photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/iv_home_use"
                android:padding="@dimen/size_10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                />

            <RelativeLayout
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_home_title"
                    android:maxLines="1"
                    android:textSize="@dimen/size_15dp"
                    android:layout_alignParentTop="true"
                    android:padding="@dimen/size_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/tv_home_detail"
                    android:padding="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>